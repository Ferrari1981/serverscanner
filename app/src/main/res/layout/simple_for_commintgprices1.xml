<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_commingprices"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
     android:layout_margin="5dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:strokeColor="#E0E0E3"
    app:cardMaxElevation="10dp"
    app:strokeWidth="1dp"
    android:translationZ="50dp"
    android:animateLayoutChanges="true"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".CommitingPrices.View.Window.MainActivityCommitingPrices">




    <TableLayout
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/disayn_line_tablerow7"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTV_commitingprices_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:minWidth="60dp"

                    android:layout_column="1"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_forpolymaterialb_cycle_createspinner2"
                    android:gravity="center"
                    android:hint="цфо"

                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textColorHint="#454542"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:visibility="visible"
                    app:fontFamily="@font/average_sans" />







                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTV_commitingprices_sums"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:minWidth="30dp"

                    android:layout_column="1"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/mTV_commitingprices_count"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/style_forpolymaterialb_cycle_createspinner8"
                    android:gravity="center"
                    android:hint="сума."
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textColorHint="#454542"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:visibility="visible"
                    app:fontFamily="@font/average_sans" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTV_commitingprices_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/style_forpolymaterialb_cycle_createspinner8"
                    android:gravity="center"
                    android:hint="кол."
                    android:minWidth="30dp"

                    android:minHeight="30dp"
                    android:textAlignment="gravity"
                    android:textColor="#000000"
                    android:textColorHint="#454542"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    android:visibility="visible"
                    app:fontFamily="@font/average_sans" />















               <!--TODO второая страка -->



                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/mTV_commitingprices_value"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_below="@+id/mTV_commitingprices_name"

                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/arrow_nested_receriview"
                    android:background="@drawable/style_forpolymaterialb_cycle_createspinner2"
                    android:gravity="center"
                    android:minHeight="35dp"


                    android:padding="1dp"
                    android:text="Value ЦФО"
                    android:textAlignment="gravity"
                    android:textColor="#000000"

                    android:textColorHint="#80807C"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="visible"
                    app:fontFamily="@font/average_sans" />


                <com.google.android.material.button.MaterialButton

                    android:id="@+id/arrow_nested_receriview"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:layout_column="1"
                    android:layout_below="@+id/mTV_commitingprices_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/alegreya_sans_sc_thin"
                    android:padding="2dp"
                    android:stateListAnimator="@drawable/icon_for_commingpricesup"
                    android:textAlignment="center"
                    app:cardCornerRadius="50dp"
                    app:cardMaxElevation="5dp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/icon_for_commingpricesup"
                    app:iconGravity="textEnd"
                    app:iconPadding="1dp"
                    app:iconSize="25dp"
                    app:iconTint="#686565"
                    app:rippleColor="#F50057"
                    app:strokeColor="#F2F6F6"
                    app:strokeWidth="1dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>
        </TableRow>




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:background="@drawable/disayn_line_tablerow7"
            android:gravity="center_vertical|center_horizontal">


            <androidx.recyclerview.widget.RecyclerView

                android:layout_column="0"

                android:id="@+id/recycleview_nesters_comminingpprices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_centerHorizontal="true"

                android:layout_margin="2dp"
                android:padding="2dp"

                android:addStatesFromChildren="false"
                android:background="#FFFFFF"

                android:foregroundGravity="center"

                android:scrollbars="horizontal|vertical"
                tools:ignore="MissingConstraints" />






        </TableRow>







        <!-- //todo КОНЕЦ  сторочек с самими данными-->

</TableLayout>


    </com.google.android.material.card.MaterialCardView>


